  <% if task.photo.attached? %>
    <% photo_url = cl_image_path task.photo.key, crop: :fill %>
  <% else %>
    <% photo_url = image_path "https://source.unsplash.com/random/?1,#{task.title}" %>
  <% end %>

<div class="flip-card">
  <div class="flip-card-inner">
    <div class="flip-card-front">
      <%= image_tag photo_url, style: "width: 100%; height: 60%" %>
      <div class="p-3 text-content mb-3">
        <h2><%= task.title %></h2>
        <p><strong><%=task.user.username%></strong> will pay: <strong>£<%= task.price %></strong></p>
        <p class="truncate"><%= task.description %>...</p>
      </div>
    </div>
    <div class="flip-card-back p-4 text-content">
      <h2><%= task.title %></h2>
      <p><strong><%=task.user.username%></strong> will pay: <strong>£<%= task.price %></strong></p>
      <p><%= task.description %></p>
      <p><i class="fa-solid fa-location-dot"></i> <%= task.location %></p>
      <p><i class="fa-solid fa-calendar-check"></i> Needed by: <%= task.task_due_by %></p>
    </div>
  </div>
</div>
