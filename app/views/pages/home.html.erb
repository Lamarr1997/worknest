<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1505798577917-a65157d3320a?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
  <div class="container">
    <h1>Worknest</h1>
    <p>Find the right work for you!</p>
    <p>Or find the right person to work for you!</p>
    <p>Improve your work. Improve your nest. </p>
  </div>
</div>

<div class="card-container mt-5 row">
  <% @tasks.each do |task| %>
    <%= link_to(task_path(task), class: "col-lg-3 col-md-6 col-12") do %>
      <%= render "/shared/task_card", task: task %>
    <% end %>
  <% end %>
</div>
