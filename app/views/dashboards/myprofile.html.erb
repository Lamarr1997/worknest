<% task = @user.tasks.length %>
<% jobs = @user.bookings.length %>

<div class="profile-user">
<h1 class="mb-5">How others see you: <%= @user.username %> ⭐</h1>
  <div class="d-flex justify-content-between">
    <div class="m-4">
      <i class="fa-solid fa-trophy"></i>
      <h2><%= jobs %> jobs posted</h2>
    </div>
    <div class="m-4">
      <i class="fa-solid fa-hammer"></i>
      <h2><%= task %> tasks to be done</h2>
    </div>
  </div>
</div>

<div class="fa-3x">
  <%= link_to new_task_path do %>
    <i class="fa-solid fa-circle-plus fa-beat"></i>
  <%end%>
  <i class="fa-solid fa-heart fa-beat"></i>
  <i class="fa-solid fa-heart fa-beat" style="--fa-animation-duration: 0.5s;"></i>
  <i class="fa-solid fa-heart fa-beat" style="--fa-animation-duration: 2s;"></i>
  <i class="fa-solid fa-heart fa-beat" style="--fa-beat-scale: 2.0;"></i>
</div>

