
<div>
  <h1><%= @user.username %></h1>
</div>

<div class="info-jobs">
  <h3>info</h3>
  <p>You can track all the jobs you need to get done and see which user the job is assigned to.</p>
</div>

<div class = "list-activities">
  <h1>Jobs I need done:</h1>
  <div class="container">
    <div class="card-container mt-5 row">
      <% @jobs.each do |task| %>
        <%= link_to(task_path(task), class: "col-lg-3 col-md-6 col-12") do %>
          <%= render "/shared/task_card", task: task.task %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
