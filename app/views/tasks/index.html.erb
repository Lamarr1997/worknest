<h1>All The Tasks</h1>

<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    <%= form_with url: tasks_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a keyword"
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="card-container mt-5 row g-3">
  <% @tasks.each do |task| %>
    <%= link_to(task_path(task), class: "col-lg-3 col-md-4 col-12") do %>
      <div class="flip-card">
        <div class="flip-card-inner">
          <div class="flip-card-front">
             <%= image_tag "https://source.unsplash.com/random/?1,#{task.title}", style: "width: 100%; height: 60%" %>
             <div>
                <h2><%= task.title %></h2>
                <p><strong><%=task.user.username%></strong> will pay: <strong>Â£<%= task.price %></strong></p>
                <p><%= task.description %></p>
              </div>
          </div>
          <div class="flip-card-back">
            <h2><%= task.title %></h2>
            <p><%= task.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
